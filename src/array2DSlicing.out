> let arr = Array2D.init 3 4 (fun i j -> i + 10 * j);;
val arr: int[,] = [[0; 10; 20; 30]
                   [1; 11; 21; 31]
                   [2; 12; 22; 32]]

> arr.[2,3];;
val it: int = 32

> arr.[1..,3..];;
val it: int[,] = [[31]
                  [32]]

> arr.[..1,*];;
val it: int[,] = [[0; 10; 20; 30]
                  [1; 11; 21; 31]]

> arr.[1,*];;
val it: int[] = [|1; 11; 21; 31|]

> arr.[1..1,*];;
val it: int[,] = [[1; 11; 21; 31]]
